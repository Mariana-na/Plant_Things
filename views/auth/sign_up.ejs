<h1>Sign In</h1>

<form action="/sign_up" method="POST">
    <label>
      Username
      <input name="username" required />
    </label>
    <label>
      E-Mail
      <input name="email" type="email" required />
    </label>
    <label>
      Password
      <input name="password" type="password" required />
    </label>
    <button type="submit">Sign In</button>
  </form>