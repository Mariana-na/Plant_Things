<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title><%= appTitle %></title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500&display=swap');
  </style>
</head>

<body>

  <!-- NAV BAR -->
  <% if(typeof userInSession === "undefined") { %>

  <!-- If userInSession is UNDEFINED -->
  <nav>
    <div id="logo-user">
      <a href="/"><img src="https://res.cloudinary.com/dpncxyxs4/image/upload/v1689507957/temp_logo_l2hbus.png" alt="Plant Thing logo"></a>
    <h2>Plant Quest</h2>

    </div>
    <div id="nav-links">
      <ul>
        <li><a href="/users/profile">Profile</a></li>
        <li><a href="/plants/add_plant">Add a plant</a></li>
        <li><a href="/suggestions/suggestion_request">Get a suggestion</a></li>
        <li><a href="/suggestions/feedback">All suggestions/feedback</a></li>
      </ul>
    </div>
  </nav>

  <% } else { %>

  <!-- If userInSession is DEFINED -->
  <nav>
    <div id="logo-user">
      <a href="/"><img src="https://res.cloudinary.com/dpncxyxs4/image/upload/v1689507957/temp_logo_l2hbus.png" alt="Plant Thing logo"></a>
      <img src="<%= userInSession.userImage %> " alt="Plant Thing logo">
<h2>Plant Quest</h2>


      <div id="user-info-header">

        <ul>
          <!-- <li><a href="/users/profile"><%= userInSession.firstname %> </a></li> -->
          <li><%= userInSession.username %> </li>

        </ul>
        <form id="logout-form" action="/log_out" method="POST">
          <button id="logout-form-button">Logout</button>
        </form>
      </div>
    </div>
    <div id="nav-links">
      <ul>
        <li><a href="/users/profile">Profile</a></li>
        <li><a href="/plants/add_plant">Add a plant</a></li>
        <li><a href="/suggestions/suggestion_request">Get a suggestion</a></li>
        <li><a href="/suggestions/feedback">All suggestions/feedback</a></li>
      </ul>
    </div>
  </nav>
  <% } %>
  <!-- END OF NAV BAR -->

  <%- body %>

  <script src="/js/script.js"></script>
</body>

</html>